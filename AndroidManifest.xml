<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhufeng.listviewdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zhufeng.listviewdemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhufeng.listviewdemo.ArrayAdapterActivity"
            android:label="@string/title_activity_array_adapter" >
        </activity>
        <activity
            android:name="com.zhufeng.listviewdemo.SimpleAdapterActivity"
            android:label="@string/title_activity_simple_adapter" >
        </activity>
        <activity
            android:name="com.zhufeng.listviewdemo.SimpleCursorAdapterActivity"
            android:label="@string/title_activity_simple_cursor_adapter" >
        </activity>
    </application>

</manifest>